            android:focusableInTouchMode="false"
            android:hint="@string/select_closing_time"
            android:inputType="text"
            android:minHeight="48dp"
            tools:ignore="TouchTargetSizeCheck" />

        <CheckBox
            android:id="@+id/timesChb3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:text="@string/place_closed" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/friday"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/timesEt4Open"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:autofillHints=""
            android:focusableInTouchMode="false"
            android:hint="@string/select_opening_time"
            android:inputType="text"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/timesEt4Close"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:autofillHints=""
            android:focusableInTouchMode="false"
            android:hint="@string/select_closing_time"
            android:inputType="text"
            android:minHeight="48dp"
            tools:ignore="TouchTargetSizeCheck" />

        <CheckBox
            android:id="@+id/timesChb4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:text="@string/place_closed" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/saturday"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/timesEt5Open"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
